@model WebProgrammingProject.Models.JobsUser
@inject LanguageService language
@{
    ViewData["Title"] = "Details";
}

<div class="jumbotron mt-5">
    <h1>@language.Getkey("Details")</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
             @language.Getkey("UserName")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName.NameSurname)
        </dd>
        <dt class = "col-sm-2">
              @language.Getkey("Title")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Advertisement.Title)
        </dd>
        <dt class = "col-sm-2">
              @language.Getkey("IsAccepted")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsAccepted)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-secondary"asp-route-id="@Model.JobsUserId">@language.Getkey("Edit")</a> |
    <a asp-action="Index" class="btn btn-secondary">@language.Getkey("BacktoList")</a>
</div>

</div>