@model WebProgrammingProject.Models.ClubUser
@inject LanguageService language
@{
    ViewData["Title"] = "Details";
}

<div class="jumbotron mt-5">
    
<h1> @language.Getkey("Details")</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
              @language.Getkey("UserName")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.NameSurname)
        </dd>
        <dt class = "col-sm-2">
              @language.Getkey("ClubName")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Club.ClubName)
        </dd>
        <dt class = "col-sm-2">
              @language.Getkey("Mission")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserMission)
        </dd>
        <dt class = "col-sm-2">
              @language.Getkey("JoinDate")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JoinDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model.Id"> @language.Getkey("JoinDate")</a> |
    <a asp-action="Index" class="btn btn-secondary"> @language.Getkey("BacktoList")</a>
</div>

</div>