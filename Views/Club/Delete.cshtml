@model WebProgrammingProject.Models.Club
@inject LanguageService language
@{
    ViewData["Title"] = "Delete";
}

<div class="jumbotron mt5">
    <h1>@language.Getkey("DeleteClub")</h1>

<h3>@language.Getkey("DeleteWarning")</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @language.Getkey("ClubName")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClubName)
        </dd>
        <dt class = "col-sm-2">
           @language.Getkey("FoundationDate")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FoundationDate)
        </dd>
        <dt class = "col-sm-2">
            @language.Getkey("PresidentEmail")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PresidentEmail)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@language.Getkey("Delete")" class="btn btn-secondary" /> |
        <a asp-action="Index" class="btn btn-secondary">@language.Getkey("BacktoList")</a>
    </form>
</div>
</div>
