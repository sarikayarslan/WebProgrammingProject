@model WebProgrammingProject.Models.Advertisement
@inject LanguageService language
@{
    ViewData["Title"] = "Details";
}

<div class="jumbotron mt-5">
    <h1> @language.Getkey("Details")</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @language.Getkey("Title")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @language.Getkey("Description")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @language.Getkey("Advertiser")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.NameSurname)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model.Id">@language.Getkey("Edit")</a> 
    <a asp-action="Index" class="btn btn-secondary">@language.Getkey("BacktoList")</a>
</div>
</div>
